<%= link_to 'Back', images_path, class: 'btn btn-primary mb-3' %>
<div class="row fix-height">
  <div class="col-md-6 viewer-container">
    <%= image_tag @image.photo, class: "card-img-top img-fluid" %>
    <%= link_to 'Download Image', @image.photo, download: @image.photo, class: "btn btn-primary" %>
  </div>
  <div class="col-md-6 viewer-container">
    <%= text_area_tag 'ocr_content', @image.ocr_content, rows: 10, cols: 49, class: 'txt-area' %>
    <%= link_to 'Download Text', image_download_text_path(@image), class: 'btn btn-primary' %>
  </div>
</div>
