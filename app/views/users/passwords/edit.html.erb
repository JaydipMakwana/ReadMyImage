<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
    <!-- Icon -->
    <div class="fadeIn first mt-5">
      <h4>Change your password</h4>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, id: "password", class: "fadeIn third mb-3", placeholder: "Password"  %>
      <%= f.password_field :password_confirmation, id: "password", class: "fadeIn third mb-3", placeholder: "Confirm Password" %>
      <%= f.submit "Change my password" %>
    <% end %>
    <div id="formFooter">
      <%= link_to "Log in", new_session_path(resource_name), class: "underlineHover" %>
      |
      <%= link_to "Sign up", new_registration_path(resource_name), class: "underlineHover" %>
    </div>
  </div>
</div>
