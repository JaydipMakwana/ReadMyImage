<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
    <!-- Icon -->
    <div class="fadeIn first mt-5">
      <h4>Forgot your password?</h4>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.email_field :email, id: "login", class: "fadeIn second", placeholder: "Email" %>
      <%= f.submit "Send reset instructions", class: "fadeIn fourth" %>
    <% end %>
    <div id="formFooter">
      <%= link_to "Log in", new_session_path(resource_name), class: "underlineHover" %>
      |
      <%= link_to "Sign up", new_registration_path(resource_name), class: "underlineHover" %>
    </div>
  </div>
</div>
