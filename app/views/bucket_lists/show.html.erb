<%= link_to 'Back', bucket_lists_path, class: 'btn btn-primary mb-3' %>
<div class="row fix-height">
  <div class="col-md-6 viewer-container">
    <%= image_tag @bucket_list.images.first, size: '286x286', class: "card-img-top" %>
    <%= link_to 'Download Image', @bucket_list.images.first, download: @bucket_list.images.first, class: "btn btn-primary" %>
  </div>
  <div class="col-md-6 viewer-container">
    <%= text_area_tag 'ocr_content', @bucket_list.ocr_content, rows: 10, cols: 49, class: 'mt-3 mb-3' %>
    <%= link_to 'Download Text', bucket_list_download_text_path(@bucket_list), class: 'btn btn-primary' %>
  </div>
</div>
